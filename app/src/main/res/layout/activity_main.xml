<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="uk.co.akm.imprintdemo.MainActivity">

    <TextView
        android:id="@+id/compatibility_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Undefined state" />

    <Button
        android:id="@+id/auth_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/compatibility_state"
        android:layout_marginTop="32dp"
        android:text="Authenticate"
        android:onClick="onAuth"
        android:enabled="false"/>

    <Button
        android:id="@+id/auth_crypto_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/auth_btn"
        android:layout_marginTop="32dp"
        android:text="Authenticate for Crypto"
        android:onClick="onAuthForCrypto"
        android:enabled="false"/>

    <Button
        android:id="@+id/auth_asymmetric_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/auth_crypto_btn"
        android:layout_marginTop="32dp"
        android:text="Authenticate with Server"
        android:onClick="onAuthForAsymmetric"
        android:enabled="false"/>

</RelativeLayout>
